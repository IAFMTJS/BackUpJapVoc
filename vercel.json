{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run vercel-build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "x-vercel-cache": "HIT"
      },
      "continue": true
    },
    {
      "src": "/static/media/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable",
        "x-vercel-cache": "HIT"
      },
      "continue": true
    },
    {
      "src": "/romaji-data.json",
      "headers": {
        "content-type": "application/json",
        "access-control-allow-origin": "*",
        "cache-control": "public, max-age=0, must-revalidate",
        "x-vercel-cache": "MISS"
      },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "github": {
    "silent": true,
    "autoAlias": true
  },
  "regions": ["fra1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 